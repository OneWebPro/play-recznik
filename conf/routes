# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                   controllers.Application.index
GET        /messages.js                        controllers.Application.jsMessages

# Serbian
GET        /api/serbian/find/:word             controllers.Serbian.find(word:String)
GET        /api/serbian/translate/:word        controllers.Serbian.translate(word:String)

#Polish
GET        /api/polish/find/:word              controllers.Polish.find(word:String)
GET        /api/polish/translate/:word         controllers.Polish.translate(word:String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                       controllers.Assets.at(path="/public", file)
GET        /view/:name                         controllers.Application.view(name:String)
